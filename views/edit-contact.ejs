<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Kontak</h2>
            <% if (typeof errors != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg; %></li>
                    <% }) %>
                </ul>
            </div>
            <% } %>

            <form method="post" action="/contact/edit">
                <input type="hidden" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama; %>">
                <div class="form-group">
                    <label for="nama">Nama</label>
                    <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama; %>">
                </div>
                <div class="form-group">
                    <label for="nohp">No HP</label>
                    <input type="text" class="form-control" id="nohp" name="nohp"  value="<%= contact.nohp; %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" id="email" name="email"  value="<%= contact.email; %>">
                </div>
                <button type="submit" class="btn btn-primary">Ubah</button>
            </form>
        </div>
    </div>
</div>